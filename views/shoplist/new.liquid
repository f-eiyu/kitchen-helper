{% layout "layout.liquid" %}

{% block title %}Shopping List{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/layout-form.css">
<link rel="stylesheet" href="/css/shoplist/shoplist_nav.css">
{% endblock %}

{% block header %}Add to Shopping List{% endblock %}

{% block content %}
<div class="card">
  <form action="/shoplist" method="POST">
    <fieldset>
      <legend>Add what to your Shopping List?</legend>

      <label class="form-label" for="name">Name</label>
      <input
        class="form-control"
        type="text"
        name="name"
      />

      <label class="form-label" for="amount">Amount</label>
      <input
        class="form-control"
        type="text"
        inputmode="numeric"
        name="amount"
      />
    </fieldset>

    <input
    type="submit"
    value="Add to Shopping List"
    class="btn btn-success"
  />
  </form>
</div>
<a href="/shoplist">Back</a>
{% endblock %}