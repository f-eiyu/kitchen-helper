{% layout "layout.liquid" %}

{% block title %}Adding Recipe{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/recipes/recipe_nav.css">
{% endblock %}

{% block header %}Add to Recipe{% endblock %}

{% block content %}
<div class="card">
  <form action="/recipes" method="POST">
    <fieldset>
      <legend>Tell us about your recipe!</legend>

      <label class="form-label" for="name">Name</label>
      <input
        class="form-control"
        type="text"
        name="name"
      />

      <div id="ingredients-block">
        <label class="form-label" for="ingredients[]">Ingredient</label>
        <input
          class="form-control"
          type="text"
          name="ingredients[]"
        />
        <label class="form-label" for="amounts[]">Amount</label>
        <input
          class="form-control"
          type="text"
          inputmode="numeric"
          name="amounts[]"
        />
      </div>
      <div id="add-ingredient" class="btn btn-primary">Add another ingredient</div>

      <label class="form-label" for="instructions">Instructions</label>
      <textarea
        class="form-control"
        name="instructions"
      ></textarea>

      <label class="form-label" for="tags">Tags</label>
      <input
        class="form-control"
        type="text"
        name="tags"
        placeholder="Separate tags with commas"
      />

      <label class="form-label" for="notes">Notes</label>
      <input
        class="form-control"
        type="text"
        name="notes"
        placeholder="Separate notes with commas"
      />

      <label class="form-label" for="favorite">Favorite?</label>
      <input
        class="form-check-input"
        type="checkbox"
        name="favorite"
      />
    </fieldset>

    <input
    type="submit"
    value="Add to Recipes"
    class="btn btn-success"
  />
  </form>
</div>
<a href="/recipes">Back</a>
{% endblock %}

{% block scripts %}
<script src="/scripts/recipes/add-ingredient-button.js" async defer></script>
{% endblock %}