{% layout "layout.liquid" %}

{% block title %}Adding Recipe{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/layout/forms.css">
<link rel="stylesheet" href="/css/recipes/forms.css">
<link rel="stylesheet" href="/css/recipes/recipe_nav.css">
{% endblock %}

{% block header %}Add to Recipe Book{% endblock %}

{% block content %}
<div class="card">
  <form action="/recipes" method="POST">
    <fieldset>
      <legend>Tell us about your recipe!</legend>

      <div class="card-body">
        <div class="form-text-row">
          <label class="form-label" for="name">Name</label>
          <input
            class="form-control"
            type="text"
            name="name"
          />
        </div>

        <div class="form-text-row">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            name="description"
          ></textarea>
        </div>

        <div class="section-divider"></div>

        <div id="ingredients-block">
          <div class="form-text-row">
            <label class="form-label" for="ingredients[]">Ingredient</label>
            <input
              class="form-control"
              type="text"
              name="ingredients[]"
            />
          </div>
          <div class="form-text-row">
            <label class="form-label" for="amounts[]">Amount</label>
            <input
              class="form-control"
              type="text"
              inputmode="numeric"
              name="amounts[]"
            />
          </div>
        </div>
        <div id="add-ingredient">Add ingredient</div>

        <div class="section-divider"></div>

        <div class="form-text-row">
          <label class="form-label" for="instructions">Instructions</label>
          <textarea
            class="form-control"
            name="instructions"
          ></textarea>
        </div>

        <div class="form-text-row">
          <label class="form-label" for="tags">Tags</label>
          <input
            class="form-control"
            type="text"
            name="tags"
            placeholder="Separate tags with commas"
          />
        </div>

        <div class="form-text-row">
          <label class="form-label" for="notes">Notes</label>
          <input
            class="form-control"
            type="text"
            name="notes"
            placeholder="Separate notes with commas"
          />
        </div>

        <div class="form-text-row favorite-checkbox">
          <label class="form-label" for="favorite">Favorite?</label>
          <div class="checkbox">
            <input
              class="form-check-input"
              type="checkbox"
              name="favorite"
            />
          </div>
        </div>
      </div>
    </fieldset>

    <div class="button-container">
      <input
        type="button"
        onclick="location.href='/recipes';"
        value="Back"
      />
      
      <input
        type="submit"
        value="Add Recipe"
      />
    </div>
  </form>
</div>
{% endblock %}

{% block scripts %}
<script src="/scripts/recipes/add-ingredient-button.js" async defer></script>
{% endblock %}