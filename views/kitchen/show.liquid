{% layout "layout.liquid" %}

{% block title %}{{ing.name}}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/kitchen/kitchen_nav.css">
{% endblock %}

{% block header %}{{ing.name}}{% endblock %}

{% block content %}
<div class="card">
  {{ing.name}}
  <ul>
    <li>amount: {{ing.amount}}</li>
    <li>tags:
      {% for tag in ing.tags %}
        {{tag}}, 
      {% endfor %}  
    </li>
    <li>favorite? {{ing.favorite}}</li>
    <li>updated: {{ing.renderedDate}}</li>
    <li>id: {{ing._id}}</li>
  </ul>
  <a href="/kitchen/{{ing._id}}/edit">Edit Ingredient</a>
  <form action="/kitchen/{{ing._id}}?_method=DELETE" method="POST">
    <input
      type="submit"
      value="Delete"
    />
  </form>
</div>
<a href="/kitchen">Back</a>
{% endblock %}